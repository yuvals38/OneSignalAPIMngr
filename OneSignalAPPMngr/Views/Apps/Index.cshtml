        $(".name", row).find("span").html(name);
        $(".name", row).find("input").val(name);

        row.find(".Edit").show();

        $("#tblApps").append(row);
    };

    //Edit event handler.
    $("body").on("click", "#tblApps .Edit", function () {
        var row = $(this).closest("tr");
        $("td", row).each(function () {
            if ($(this).find("input").length > 0) {
                $(this).find("input").show();
                $(this).find("span").hide();
            }
        });
        row.find(".Update").show();
        row.find(".Cancel").show();

        $(this).hide();
    });

    //Update event handler.
    $("body").on("click", "#tblApps .Update", function () {
        var row = $(this).closest("tr");
        $("td", row).each(function () {
            if ($(this).find("input").length > 0) {
                var span = $(this).find("span");
                var input = $(this).find("input");
                span.html(input.val());
                span.show();
                input.hide();
            }
        });
        row.find(".Edit").show();
        row.find(".Cancel").hide();
        $(this).hide();

        var app = {};
        app.id = row.find(".id").find("span").html();
        app.name = row.find(".name").find("span").html();

        $.ajax({
            type: "POST",
            url: "/Apps/UpdateApp",
            data: '{app:' + JSON.stringify(app) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        });
    });

    //Cancel event handler.
    $("body").on("click", "#tblApps .Cancel", function () {
        var row = $(this).closest("tr");
        $("td", row).each(function () {
            if ($(this).find("input").length > 0) {
                var span = $(this).find("span");
                var input = $(this).find("input");
                input.val(span.html());
                span.show();
                input.hide();
            }
        });
        row.find(".Edit").show();

        row.find(".Update").hide();
        $(this).hide();
    });


</script>
